<h1>AjaxApp</h1>
<div id="app">
  <%= form_with url: "/posts", method: :post, id: "form" do |form| %>
    <%= form.text_field :content ,id: "content" %>
    <%= form.submit '投稿する', id: "submit"%>
  <% end %>

  <form>
    <input type="text" v-model="content">
    <button type="button" @click="createPost">投稿する</button>
  </form>
  <%# <div v-for="post in posts" :key="post.id" class="post" :data-id="post.id" data-check="post.checked">
    {{ post.title }}
  </div> %>
</div>

<div id="list">
  <% @posts.each do |post| %>
  <div class="post" data-id=<%= post.id %> data-check=<%= post.checked %>>
      <div class="post-date">
        投稿日時：<%= post.created_at %>
      </div>
      <div class="post-content">
        <%= post.content %>
      </div>
    </div>
  <% end %>
</div>
